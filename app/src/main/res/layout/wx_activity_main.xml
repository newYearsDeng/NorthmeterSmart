<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:gravity="center|top"
	android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@drawable/new_img_background"
    tools:context="org.dyd.smart.activity.wxpay.WXPayActivity" >

    <RelativeLayout
        android:id="@+id/linear_textout_1"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >
		<ImageView
            android:id="@+id/img_wx_back"
            style="@style/Btn_Back_RelativeLayout" />
        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="微信充值"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="21.0dip" />
        
        <TextView
            android:id="@+id/textview_syje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="余额查询"
            android:textAppearance="?android:attr/textAppearanceMedium"            
            android:textColor="@drawable/color_style_white"
            android:textSize="17.0dip" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="请选择充值金额:"
            android:textColor="@color/white"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <Button 
	        android:layout_width="0dp"
	        android:layout_height="45dp"
	        android:layout_weight="1"
	        android:background="@drawable/selector_settin_button" 
	        android:text="10元"
	        android:textColor="@color/white"
	        android:id="@+id/but_charge_1"/>
        <Button 
	        android:layout_width="0dp"
	        android:layout_height="45dp"
	        android:layout_weight="1"
	        android:layout_marginLeft="10dp"
	        android:background="@drawable/selector_settin_button" 
	        android:text="20元"
	        android:textColor="@color/white"
	        android:id="@+id/but_charge_2"/>
        <Button 
	        android:layout_width="0dp"
	        android:layout_height="45dp"
	        android:layout_weight="1"
	        android:layout_marginLeft="10dp"
	        android:background="@drawable/selector_settin_button" 
	        android:text="50元"
	        android:textColor="@color/white"
	        android:id="@+id/but_charge_3"/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <Button 
	        android:layout_width="0dp"
	        android:layout_height="45dp"
	        android:layout_weight="1"
	        android:background="@drawable/selector_settin_button" 
	        android:text="100元"
	        android:textColor="@color/white"
	        android:id="@+id/but_charge_4"/>
        <Button 
	        android:layout_width="0dp"
	        android:layout_height="45dp"
	        android:layout_weight="1"
	        android:layout_marginLeft="10dp"
	        android:background="@drawable/selector_settin_button" 
	        android:text="200元"
	        android:textColor="@color/white"
	        android:id="@+id/but_charge_5"/>
        <Button 
	        android:layout_width="0dp"
	        android:layout_height="45dp"
	        android:layout_weight="1"
	        android:layout_marginLeft="10dp"
	        android:background="@drawable/selector_settin_button" 
	        android:text="500元"
	        android:textColor="@color/white"
	        android:id="@+id/but_charge_6"/>

    </LinearLayout>
    
    <LinearLayout
	    android:id="@+id/user_layout_1"
	    android:layout_marginTop="50dp"
	    android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:clickable="true"
		android:focusable="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@drawable/content_background"
            android:layout_height="45dp"
            android:text="充值金额:"
            android:textColor="@color/white"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/charge_number"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/content_background"
            android:paddingLeft="20dp"
            android:hint="请输入充值金额"
            android:gravity="center|left"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            />
	</LinearLayout>
	
    <Button 
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/login_button_wx_style" 
        android:text="微 信 充 值"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/bt_submit_order"/>
    <Button
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/login_button_wx_style" 
        android:text="确认支付"
        android:id="@+id/bt_corfirm"/>
     <TextView
        android:id="@+id/tv_prepay_id"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        >
    </TextView>

</LinearLayout>
