<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
        <LinearLayout
            android:id="@+id/layout_dialog"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal|center"
	        android:orientation="vertical"
	        android:background="@drawable/air_center_inf" >
	        
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/img_siludengkong_icon"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview2_socket"
                    style="@style/message_texts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView_icon"
                    android:layout_toRightOf="@+id/imageView_icon"
                    android:text="通讯网络:"
                    android:textColor="#FFFFFF" />

                <ImageView
		            android:id="@+id/image0_socket"
		            style="@style/message_texts"
		            android:layout_width="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:scaleType="fitStart"
		            android:layout_height="wrap_content"
		            android:src="@drawable/signal_0"
		            android:layout_toRightOf="@+id/textView2_socket"/>
            </LinearLayout>
	        
            <View
	            android:id="@+id/air_view_show"
	            android:layout_width="fill_parent"
	            android:layout_height="1dp"
	            android:layout_marginLeft="30dp"
	            android:layout_marginRight="30dp"
	            android:alpha="0.5"
	            android:background="@color/white"/>
	        
	        <LinearLayout 
	     	    android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:orientation="horizontal">
	     	     <TextView
		            android:id="@+id/textView2_air"
		            style="@style/message_texts"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignTop="@+id/imageView_icon"
		            android:layout_marginLeft="15dp"
		            android:layout_toRightOf="@+id/imageView_icon"
		            android:text="电量:"
		            android:textColor="#FFFFFF" />
		        <TextView
		            android:id="@+id/item0"
		            style="@style/message_texts"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignTop="@+id/textView2_air"
		            android:layout_marginLeft="5dp"
		            android:layout_toRightOf="@+id/textView2_air"
		            android:text="--kWh"
		            android:textColor="#FFFFFF" />
	     	</LinearLayout>
	     	
	        <LinearLayout 
	     	    android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:orientation="horizontal">
	     	     <TextView
		            android:id="@+id/textView3_air"
		            style="@style/message_texts"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignLeft="@+id/textView6"
		            android:layout_below="@+id/textView6"
		            android:layout_marginTop="1dp"
		            android:text="功率:"
		            android:textColor="#FFFFFF" />

		        <TextView
		            android:id="@+id/item1"
		            style="@style/message_texts"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignBaseline="@+id/textView3_air"
		            android:layout_alignBottom="@+id/textView3_air"
		            android:layout_marginLeft="5dp"
		            android:layout_toRightOf="@+id/textView3_air"
		            android:text="--W"
		            android:textColor="#FFFFFF" />
	     	</LinearLayout>
	     	<LinearLayout 
	     	    android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:orientation="horizontal">
	     	 <TextView
		            android:id="@+id/textView5_1"
		            style="@style/message_texts"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="1dp"
		            android:text="电流:"
		            android:textColor="#FFFFFF" />
	     	 <TextView
		            android:id="@+id/item3"
		            style="@style/message_texts"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignLeft="@+id/item2"
		            android:layout_marginLeft="5dp"
		            android:text="--A"
		            android:textColor="#FFFFFF" />
	     	</LinearLayout>
	        
		</LinearLayout>
		
    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        
        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/checkbox_new_thz_style"
            android:gravity="center"
            android:button="@null"
            android:layout_marginRight="30dp"
            android:text="@null" />
        <ImageView
            android:id="@+id/img_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/socket_refresh_style" />
    </LinearLayout>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">
    	<TableLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="fill_parent"
    	    android:paddingBottom="5dp"
    	    android:paddingTop="20dp">
	     	
	     	<TableRow
	     	    android:layout_width="match_parent"
	     	    android:layout_height="wrap_content"
	     	    android:gravity="center_vertical"
	     	    android:layout_weight="1"
	     	    android:background="@drawable/active_back">
	     	 	<TextView
	     	 	    android:layout_width="wrap_content"
	     	    	android:layout_height="wrap_content"
	     	    	android:gravity="center"
	     	    	android:layout_weight="1"
	     	    	android:textColor="@color/white"
	     	    	android:layout_marginLeft="20dp"
	     	    	android:textSize="21sp"
	     	    	android:text="左开关"/>

	     	 	<CheckBox
	     	 	    android:id="@+id/checkBox_1"
	     	 	    android:layout_width="wrap_content"
	     	 	    android:layout_height="wrap_content"
	     	 	    android:layout_marginRight="20dp"
	     	 	    android:layout_weight="1"
	     	 	    android:drawableRight="@drawable/checkbox_new_thz_style"
	     	 	    android:button="@null"
	     	 	    android:text="@null" />
	     	</TableRow>
	     	<TableRow
	     	    android:layout_width="match_parent"
	     	    android:layout_height="wrap_content"
	     	    android:gravity="center_vertical"
	     	    android:layout_weight="1"
	     	    android:background="@drawable/active_back">
	     	 	<TextView
	     	 	    android:layout_width="wrap_content"
	     	    	android:layout_height="wrap_content"
	     	    	android:gravity="center"
	     	    	android:layout_weight="1"
	     	    	android:textColor="@color/white"
	     	    	android:layout_marginLeft="20dp"
	     	    	android:textSize="21sp"
	     	    	android:text="右开关"/>

	     	 	<CheckBox
	     	 	    android:id="@+id/checkBox_4"
	     	 	    android:layout_width="wrap_content"
	     	 	    android:layout_height="wrap_content"
	     	 	    android:layout_marginRight="20dp"
	     	 	    android:layout_weight="1"
	     	 	    android:drawableRight="@drawable/checkbox_new_thz_style"
	     	 	    android:button="@null"
	     	 	    android:text="@null" />
	     	</TableRow>
	     	<TableRow
	     	    android:layout_width="match_parent"
	     	    android:layout_height="wrap_content"
	     	    android:gravity="center_vertical"
	     	    android:layout_weight="1"
	     	    android:background="@drawable/active_back">
	     	 	<TextView
	     	 	    android:layout_width="wrap_content"
	     	    	android:layout_height="wrap_content"
	     	    	android:gravity="center"
	     	    	android:layout_weight="1"
	     	    	android:textColor="@color/white"
	     	    	android:layout_marginLeft="20dp"
	     	    	android:textSize="21sp"
	     	    	android:text="上开关"/>

	     	 	<CheckBox
	     	 	    android:id="@+id/checkBox_3"
	     	 	    android:layout_width="wrap_content"
	     	 	    android:layout_height="wrap_content"
	     	 	    android:layout_marginRight="20dp"
	     	 	    android:layout_weight="1"
	     	 	    android:drawableRight="@drawable/checkbox_new_thz_style"
	     	 	    android:button="@null"
	     	 	    android:text="@null" />
	     	</TableRow>
	     	<TableRow
	     	    android:layout_width="match_parent"
	     	    android:layout_height="wrap_content"
	     	    android:gravity="center_vertical"
	     	    android:layout_weight="1"
	     	    android:background="@drawable/active_back">
	     	 	<TextView
	     	 	    android:layout_width="wrap_content"
	     	    	android:layout_height="wrap_content"
	     	    	android:gravity="center"
	     	    	android:layout_weight="1"
	     	    	android:textColor="@color/white"
	     	    	android:layout_marginLeft="20dp"
	     	    	android:textSize="21sp"
	     	    	android:text="下开关"/>

	     	 	<CheckBox
	     	 	    android:id="@+id/checkBox_2"
	     	 	    android:layout_width="wrap_content"
	     	 	    android:layout_height="wrap_content"
	     	 	    android:layout_marginRight="20dp"
	     	 	    android:layout_weight="1"
	     	 	    android:drawableRight="@drawable/checkbox_new_thz_style"
	     	 	    android:button="@null"
	     	 	    android:text="@null" />
	     	</TableRow>
	     	
	     	
        
    </TableLayout>
    </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
     	>
        <TextView
            android:id="@+id/textView2"      
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	android:layout_alignTop="@+id/imageView_icon"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView_icon"
            android:text="当前电量:" />
          <TextView
            android:id="@+id/textView6"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="1dp"
            android:text="功率因数:" />

        <TextView
            android:id="@+id/textView3"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="1dp"
            android:text="功率:" />

        <TextView
            android:id="@+id/textView4"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="1dp"
            android:text="电压:" />

        <TextView
            android:id="@+id/textView5"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="1dp"
            android:text="电流:" />
         <TextView
            android:id="@+id/textView8"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     		android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            android:text="状态:" />

        <TextView
            android:id="@+id/item0_switch"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView2"
            android:text="10.5KWH" />

        <TextView
            android:id="@+id/item1_switch"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
             android:layout_marginLeft="10dp"
            android:text="22.0W" />

        <TextView
            android:id="@+id/item3_switch"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/item2"
            android:text="0.105A" />

        <TextView
            android:id="@+id/item6"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:text="跳闸"
             />
  
 

        <TextView
            android:id="@+id/textView7"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/item1_switch"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="1dp"
            android:text="频率:" />

        <TextView
            android:id="@+id/item5"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/item3_switch"
            android:text="50Hz" />

        <TextView
            android:id="@+id/item4"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item0_switch"
            android:layout_below="@+id/item0_switch"
            android:text="0.1" />

        <TextView
            android:id="@+id/item2"
            style="@style/message_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item3_switch"
            android:layout_alignRight="@+id/item4"
            android:text="223.5V" />

    </RelativeLayout>
	
    

</LinearLayout>