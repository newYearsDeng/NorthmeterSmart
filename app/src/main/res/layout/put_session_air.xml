<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/new_img_background"
    android:orientation="vertical" > 
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         >
	     <RelativeLayout
	        android:id="@+id/relativeLayout1"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/textView_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/button1"
            style="@style/Btn_Back_RelativeLayout" />

    </RelativeLayout>
	 
	     <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:gravity="center"
	            android:paddingLeft="20dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@drawable/text_back"
	            android:focusable="true"  
   				android:focusableInTouchMode="true" >
	
	            <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.7"
	                android:gravity="center"
	                android:text="设备名称:"
	                android:textSize="16sp"
	                android:textColor="@color/white" />
	
	            <EditText
	                android:id="@+id/edittext_name"
	                android:layout_width="0dp"
	                android:layout_height="40dp"
	                android:layout_marginLeft="5dp"
	                android:layout_weight="1"
	                android:background="@drawable/text_back"
	                android:ems="10"
	            	android:textSize="16sp"
	            	android:maxLength="8"
	            	android:paddingLeft="10dp"
	            	android:textColor="@color/white"
	                android:imeOptions="flagNoFullscreen"
	                android:inputType="textPersonName" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/select_type"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@drawable/text_back"
	            android:gravity="center"
	            android:paddingLeft="20dp" 
	            android:paddingRight="10dp">
	
	            <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.7"
	                android:gravity="center"
	                android:text="电器类型:"
	                android:textSize="16sp"
	                android:textColor="@color/white" />
	            <RelativeLayout
		            android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_marginLeft="5dp"
	                android:background="@drawable/text_back"
		            android:gravity="left|center_vertical" >
			            <Spinner
			                android:id="@+id/editText_type"
			                android:layout_width="fill_parent"
			                android:layout_height="42dp"
			                android:gravity="center"
			                android:ems="10"
			                android:background="@drawable/button_press_style"
			                android:imeOptions="flagNoFullscreen"
		                	android:inputType="textPersonName" />
	
			            <ImageView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentRight="true"
			                android:layout_marginRight="10dp"
			                android:layout_centerVertical="true"
			                android:background="@drawable/spinner_down_style" />
	
				</RelativeLayout>
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:background="@drawable/text_back"
	            android:gravity="center"
	            android:paddingLeft="20dp"
	            android:paddingRight="10dp" >
	            <TextView
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.7"
	                android:gravity="center"
	                android:text="是否显示:"
	                android:textSize="16sp"
	                android:textColor="@color/white" />
	
	            <ToggleButton
			        android:id="@+id/show_togbtn_air"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:layout_weight="1"
			        android:layout_marginLeft="5dp"
			        android:background="@android:color/transparent"
			        android:button="@drawable/checkbox_new_style"
			        android:checked="true"
			        android:text=""
			        android:textOff=""
			        android:textOn="" />
	        </LinearLayout>
	        
		     <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="60dp"
		        android:gravity="center" >
		
		        <Button
		            android:id="@+id/change"
		            android:layout_width="250dp"
		            android:layout_height="40dp"
		            android:background="@drawable/button_press_style"
		            android:gravity="center"
		            android:text="确认修改"
		            android:textColor="#ffffff" />
		    </LinearLayout>
		    
		     <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:gravity="center"
	            android:layout_marginTop="27dp"
	            android:layout_marginBottom="27dp"
	            android:orientation="vertical"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp" >
	
	            <EditText
	                android:id="@+id/edit_hwfs_test"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="left|center_vertical"
	                android:background="@drawable/text_back"
	                android:ems="10"
	            	android:textSize="16sp"
	            	android:hint="红外码输入"
	            	android:paddingLeft="10dp"
	            	android:textColor="@color/white"
	                android:imeOptions="flagNoFullscreen"
	                android:inputType="textMultiLine" />
	            <EditText
	                android:id="@+id/text_hwfs_test"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="left|center_vertical"
	                android:background="@drawable/text_back"
	                android:ems="10"
	            	android:textSize="16sp"
	            	android:hint="显示结果"
	            	android:paddingLeft="10dp"
	            	android:layout_marginTop="5dp"
	            	android:textColor="@color/white"
	                android:imeOptions="flagNoFullscreen"
	                android:inputType="textMultiLine" />
	
	            <Button
		            android:id="@+id/button_hwfs_test"
		            android:layout_width="250dp"
		            android:layout_height="40dp"
		            android:layout_marginTop="10dp"
		            android:background="@drawable/button_press_style"
		            android:gravity="center"
		            android:text="发送"
		            android:textColor="#ffffff" />
	        </LinearLayout>
		     
		     
    </LinearLayout>
</LinearLayout>